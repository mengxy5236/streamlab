<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.franklintju.streamlab.users.mapper.UserMapper">

    <select id="getVideosByUserId"
            parameterType="Long"
            resultType="com.franklintju.streamlab.videos.VideoDto">

        select v.id,v.title,v.description,
               v.cover_url,v.video_url,v.duration,
               v.updated_at,v.published_at
        from videos v
            join users u on v.user_id = u.id
        where u.id = #{userId}

    </select>

</mapper>